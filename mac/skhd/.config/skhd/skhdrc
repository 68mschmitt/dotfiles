# Open Ghostty Terminal
cmd - return : open -n -a Ghostty

# Open Browser (Chrome)
cmd - b : open -n -a "Google Chrome"

# Yabai
cmd - up : yabai -m window --focus north
cmd - down : yabai -m window --focus south
cmd - right : yabai -m window --focus east
cmd - left : yabai -m window --focus west

# Focus on last focused window
alt - tab : yabai -m window --focus recent

# Move window
cmd + ctrl - up : yabai -m window --swap north
cmd + ctrl - down : yabai -m window --swap south
cmd + ctrl - left : yabai -m window --swap west
cmd + ctrl - right : yabai -m window --swap east

# Toggle Float
cmd + shift - space : yabai -m window --toggle float

# Resize Window
cmd + shift - left : yabai -m window --resize left:-50:0; \
                  yabai -m window --resize right:-50:0
cmd + shift - down : yabai -m window --resize bottom:0:50; \
                  yabai -m window --resize top:0:50
cmd + shift - up : yabai -m window --resize top:0:-50; \
                  yabai -m window --resize bottom:0:-50
cmd + shift - right : yabai -m window --resize right:50:0; \
                  yabai -m window --resize left:50:0

# Equalize Size of Windows
cmd + shift - e : yabai -m space --balance
